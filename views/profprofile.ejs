<h2><%=professional.username%></h2>
<img src="<%= professional.image%>" alt="foto del local">
<p><%= professional.description %></p>
<h3>SERVICES:</h3>
<ul>
  <li>Hair cut</li>
  <li>Hair cut and dye</li>
  <li>Hair cut and hairstyle</li>
</ul>

<h2> Make an appointment:</h2>
<ul>
<% professional.timeBlock.forEach(element => { %>
  <li><%= element.hour %>:<%= element.min %>  </li> 
<% }) %>
</ul>















<form action="" method="POST">
  <label for="date" name ="day">Choose a day:</label>
  <input type="date" name="day">
  <label for="hour" name ="hour">Choose a day:</label>
  <input type="radio" name="hour" value="9:00" checked> 9:00 <br>
  <input type="radio" name="hour" value="9:30"> 9:30 <br>
  <input type="radio" name="hour" value="10:00"> 10:00 <br>
  <input type="radio" name="hour" value="10:30"> 10:30 <br>
  <input type="radio" name="hour" value="11:00"> 11:00 <br>
  <input type="radio" name="hour" value="11:30"> 11:30 <br>
  <input type="radio" name="hour" value="12:00" > 12:00 <br>
  <input type="radio" name="hour" value="12:30"> 12:30 <br>
  <input type="radio" name="hour" value="13:00"> 13:00 <br>
  <label for="service" name ="service">Choose a service:</label>
  <input type="radio" name="service" value="haircut" checked> Hair cut <br>
  <input type="radio" name="service" value="haircut+dye">Hair cut and dye<br>
  <input type="radio" name="service" value="haircut+hairstyle"> Hair cut and hairstyle <br>
</form>
